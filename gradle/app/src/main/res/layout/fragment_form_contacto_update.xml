<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:foregroundTint="@color/teal_200"
tools:context=".ui.fragments.FormContactoUpdateFragment">

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@color/white"
    android:foregroundTint="@color/black"
    android:orientation="vertical"
    android:padding="20sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/textView100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif"
        android:text="Actualizar contacto"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView300"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif"
        android:text="Nombre:"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txtNombreUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:hint="[Nombre]"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="#673AB7"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtApellidoUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="[Apellidos]"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="#673AB7"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif"
        android:text="Ciudad:"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txtCiudadUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:hint="[Ciudad]"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="#673AB7"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView400"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif"
        android:text="Edad"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txtEdadUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:hint="[Edad]"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="#673AB7"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif"
        android:text="Correo electronico"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txtEmailUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="[Email]"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="#673AB7"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView600"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif"
        android:text="Direccion"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/txtDireccionUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="[Direccion]"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="#673AB7"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnActualizarContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:text="Guardar datos" />
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>